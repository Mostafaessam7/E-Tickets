@model Cinema
@{
    ViewBag.title = "Add a ew actor";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit @Model.Name </h1>
        </p>
        <div class="row text">
            <div class="col-md-8 offset-2"> 
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                    <div class="form-group text-center">
                        <img class="rounded-circle"  id="ProfilePicturePreview"/>
                    </div>
                    <div>
                        <label asp-for="Logo" class="form-label"> </label>
                        <input asp-for="Logo" class="form-control"/>
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-gruop mt-2">
                        <input type="submit" value="Edit" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
  
            var output=document.getElementById("ProfilePicturePreview");
            output.src=$("#Logo").val(); 
        });
        $("#Logo").on("change",function()
        {
            var output=document.getElementById("ProfilePicturePreview");
            output.src=$(this).val(); 
        })
    </script>
}