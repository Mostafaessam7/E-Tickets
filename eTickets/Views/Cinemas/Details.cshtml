@model Cinema
@{
    ViewBag.title = " Actor Details ";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row text">
            <div class="col-md-8 offset-2"> 
                <form asp-action="create" >
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview"/>
                    </div>
                    <div>
                        <label asp-for="Logo" class="form-label"> </label>
                        <input asp-for="Logo" class="form-control" readonly />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-gruop mt-2">
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.id">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
  
            var output=document.getElementById("ProfilePicturePreview");
            output.src=$("#Logo").val(); 
        });
    </script>
}